extends layout

block content
  h1=title
  - let o;
  - let items = results;
  div(class="container-fuild")
    div(class="row m-1")
    div(class="row row-cols-1 row-col-sm-4 g-6")
      each result,index in results
        - let destination = `dispatch(\"/language/update?id=${result._id}\")`
           
          p #{result.Types}
          p #{result.NumberOfLang}
          p #{result.Data}  
          
          <br><br>
          button.btn(class="btn-danger ml-1", onclick= destination) Update

  script.
   function buy(element){
     alert(`You purchased item ${element+1}.`)
    }

  script.
    function dispatch(path){
      window.location.href=path
    }
