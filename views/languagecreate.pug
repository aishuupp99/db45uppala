extends layout 
 
block content 
  h1= title 
 
  form(id='languageForm', action="/resource/languages", method="POST") 
    div.form-group 
        label.languageAttr(for='language_type') language type 
        input#Types(type='text', name='language_type') 
    div.form-group 
        label.languageAttr(for='size') NumberOfLang 
        input#size(type='number', name='size') 
    div.form-group 
        label.languageAttr(for='cost') Data 
        input#cost(type='text', name='cost') 
    input(type="submit") 
 
  script. 
    document.forms['languageForm'].addEventListener('submit', (event) => { 
      event.preventDefault(); 
      // TODO do something here to show user that form is being submitted 
      fetch(event.target.action, { 
        method: 'POST', 
        body: new URLSearchParams(new FormData(event.target)) // event.target is the form 
      }).then((resp) => { 
        return resp.json(); // or resp.text() or whatever the server sends 
      }).then((body) => { 
        alert("Save succeded") 
        // TODO handle body 
      }).catch((error) => { 
        // TODO handle error 
        alert("Save failed " + error ) 
      }); 
    }); 